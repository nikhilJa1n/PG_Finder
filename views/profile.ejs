<html>
    <head>
        <title>profile</title>
        <%- include('header'); -%>
        <%- include('layout'); -%>
    </head>
    <body>
        <div class='content-div'>
            <div class="container">
                <div class="card allSidesSoft" style="background:rgb(249, 249, 249)">
                  <div class="card-body">
    
    
                    <div class="d-flex pc">
                        <div class="image-container">
                        </div>
                    </div>
    
    
                      <div class="form-group">
                      </div>
    
                    <br />
                    <br />
    
                    <div class="col-sm-6">
                      <div class="panel panel-default allSidesSoft panel-main-div">
                        <div class="panel-heading">First Name</div>
                        <div class="panel-body"><%= user.fname %></div>
                      </div>
                    </div>
    
    
    
                    <div class="col-sm-6">
                      <div class="panel panel-default allSidesSoft panel-main-div">
                        <div class="panel-heading">Last Name</div>
                        <div class="panel-body" style="text-transform: capitalize;"><%= user.lname%></div>
                      </div>
                    </div>
    
    
    
                    <div class="col-sm-6">
                      <div class="panel panel-default allSidesSoft panel-main-div">
                        <div class="panel-heading">Phone No.</div>
                        <div class="panel-body"><%= user.phone%></div>
                      </div>
                    </div>
    
    
    
                    <div class="col-sm-6">
                      <div class="panel panel-default allSidesSoft panel-main-div">
                        <div class="panel-heading">Email</div>
                        <div class="panel-body"> <%= user.email%></div>
                      </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="panel panel-default allSidesSoft panel-main-div">
                          <div class="panel-heading">Gender</div>
                          <div class="panel-body"> <%= user.gender%></div>
                        </div>
                      </div>
    
    
    
              </div>
          </div>
        </div>
    </div>    
    </body>
</html>