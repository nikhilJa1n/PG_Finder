<html>
  <title>Pg;Finder</title>
  <%- include('header'); -%>
  <%- include('layout'); -%>
  <body>
    <div class="container" id="abc">
      <form action="/users/index" method="post" class="form-horizontal">
        <div class="form-group">
            <label class="col-md-4 control-label">Enter Location:</label>  
            <div class="col-md-4">
                 <input id="location" name="location" type="text" placeholder="Enter Location Name ,City Name" class="form-control input-md">
            </div>
        </div>
        <div class="form-group">
              <label class="col-md-4 control-label">Rooms For:</label>
              <div class="col-md-4"> 
                <label class="radio-inline" for="gender0">
                  <input type="radio" name="gender" id="gender0" value="boy">Boys
                </label> 
                <label class="radio-inline" for="gender1">
                  <input type="radio" name="gender" id="gender1" value="girl">Girls
                </label>
              </div>
        </div>
            
            <!-- Multiple Radios (inline) -->
            <div class="form-group">
              <label class="col-md-4 control-label" for="radios">Rooms Type:</label>
              <div class="col-md-4"> 
                <label class="radio-inline" for="radios-0">
                  <input type="radio" name="rtype" id="radios-0" value="single" checked="checked">Single
                </label> 
                <label class="radio-inline" for="radios-1">
                  <input type="radio" name="rtype" id="radios-1" value="shared">Shared
                </label>
              </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" ></label>  
                <div class="col-md-4">
                <button type="submit" class="btn btn-info">Find Now</button>
                </div>
              </div>
                


      </form>
    </div>
  </body>
</html>